<%- include('./boilerplate/header.ejs') %>

    <!-- -------------------------HOME-------------------------------- -->
    <div class="container-fluid mb-5">
        <div class="row title-row">
            <div class="col-lg-8 col-sm-12 title-column d-flex" data-aos="fade-right" data-aos-duration="1200">
                <h1>Exceptional stay <br>
                    Extraordinary adventure.</h1>
            </div>
        </div>
        <div class="row image">
            <div class="col-lg-12 image-wrapper " data-aos="fade-left">
                <img src="images/hero-image.jpg" />
            </div>
        </div>
    </div>
    <!-- -------------------------------ABOUT US---------------------------- -->
    <section class="container-fluid">
        <div class="row image-with-text justify-content-center mb-5">
            <div class="col-lg-6 col-md-12">
                <img src="/images/flair-towers-Sky Lounge-large.jpg" alt="" style="width:100%" data-aos="fade-right"
                    data-aos-duration="1200">
            </div>
            <div class="col-lg-5 col-md-12 d-flex align-items-start about-text flex-column justify-content-center"
                data-aos="fade-left" data-aos-duration="1200">
                <h2>Rent Space With Us</h2>
                <p class="my-5">This spacious condo features state-of-the-art amenities, including a view deck, 24-hour
                    security, and
                    garage parking. It is conveniently located near shopping and dining in Fairwinds.</p>

                <button class="px-5 py-3 border-0 button-hover">LEARN MORE</button>

            </div>
        </div>
    </section>
    <!-- -------------------------------TAKING TIME OFF---------------------------- -->
    <section class="container-fluid taking-time">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <img class="quote" src="/images/quote.png" />
                <h2 data-aos="fade-up" data-aos-duration="1200">Taking time off is the best you can do for your
                    peace of mind.</h2>
            </div>
        </div>
        <div class="row image">
            <div class="col-lg-12 image-wrapper">
                <img src="/images/viewdeck.jpg" />
            </div>
        </div>
    </section>
    <!-- -----------------------------SPACES----------------------------------- -->
    <div id="spaces">
        <div class="container-fluid">
            <h2 class="text-center">Discover our spaces</h2>
            <h3 class="text-center">We provide you with a condo room to rent, which you can keep as long as you like.
                The room is more convenient and comfortable than a hotel room.</h3>
            <div class="row justify-content-center mt-5">
                <% for (let property of featuredProperty) {%>
                    <div class="col-lg-3 col-sm-10 d-flex justify-content-center " data-aos="fade-up"
                        data-aos-duration="1200">
                        <div class="card bg-transparent border-0">
                            <img src='<%=property.image[0].url%>' class="card-img-top" alt="..." height="450">
                            <div class="card-body text-center">

                                <p class="card-text">
                                <h3>
                                    <%=property.name %>
                                </h3>
                                <%=property.address %>
                                    <%console.log(property)%>
                                        </p>
                                        <a href="#"><button class="px-5 py-3 border-0 button-hover">EXPLORE
                                                SPACE</button></a>
                            </div>
                        </div>
                    </div>
                    <%}%>
            </div>
        </div>
    </div>


    <!-- ---------------------------------AMENETIES------------------------------------ -->
    <section id="amenities" class="container-fluid">
        <div class="row justify-content-center mb-5 mt-5 amenities-text">
            <div class="col-lg-6 d-flex align-items-center about-text flex-column justify-content-center px-5"
                data-aos="fade-right" data-aos-duration="1200">
                <h2>Amenities</h2>
                <p>1 bedroom condo with one bedroom, 1 bathroom, and a fully equipped kitchen. The master bedroom has a
                    queen size bed and the living area is great for hanging out with friends and family. We offer free
                    cable TV access, free WiFi internet access, a kiddie play ground that your children will love,
                    direct beach access, and many other things that we value in our homes. Our owners are in close
                    proximity to the beach and many of them are involved in the very active lifestyle of surfing! We
                    hope you enjoy your stay!</p>
                <button class="px-5 py-3 border-0 button-hover" id="learnMore">LEARN MORE</button>
            </div>
            <div class="col-lg-5">
                <img src="https://picsum.photos/600" alt="" style="width:100%" data-aos="fade-left"
                    data-aos-duration="1200">
            </div>
        </div>
    </section>
    <section class="container-fluid">
        <div class="row justify-content-center reviews">
            <div class="col-lg-6">
                <div class="reviews-slide w-70"
                    data-slick='{"slidesToShow": 1, "slidesToScroll": 1,"arrows": false, "autoplay":true,"autoplaySpeed": 1200}'>
                    <%for (let i=0;i<6;i++) {%>
                        <div>
                            <h3>
                                <%=reviews[i].content%>
                            </h3>
                            <p>--Guest <%=reviews[i].review%>
                            </p>
                        </div>
                        <%}%>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="reviews-slide2 w-70"
                    data-slick='{"slidesToShow": 1, "slidesToScroll": 1,"arrows": false,"autoplay":true,"autoplaySpeed": 1200}'>
                    <%for (let i=6;i<11;i++) {%>
                        <div>
                            <h3>
                                <%=reviews[i].content%>
                            </h3>
                            <p>--Guest <%=reviews[i].review%>
                            </p>
                        </div>
                        <%}%>
                </div>
            </div>
        </div>
    </section>
    <section id="plan-with-us" class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h2>Plan a stay with us today.</h2>
                <a
                    onclick="Calendly.initPopupWidget({url: 'https://calendly.com/online_booking-kodego'});return false;">BOOK
                    A SPACE</a>
            </div>
        </div>
    </section>
    </main>
    <%- include('./boilerplate/footer.ejs') %>